                    @Html.ValidationMessageFor(p => p.Name)
                    <br />
                    <label class="text-white">Görsel1</label>
                    @Html.TextBoxFor(p => p.ImageUrl, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.ImageUrl)
                    <br />
                    <label class="text-white">Görsel2</label>
                    @Html.TextBoxFor(p => p.ImageUrl2, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.ImageUrl2)
                    <br />
                    <label class="text-white">Proje Url</label>
                    @Html.TextBoxFor(p => p.ProjectUrl, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.ProjectUrl)
