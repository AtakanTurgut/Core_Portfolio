@using EntityLayer.Concrete
@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Referans Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Resim - Ad Soyad</th>
                            <th scope="col">Şirket</th>
                            <th scope="col" class="sort" data-sort="completion">Ünvan</th>
                            <th scope="col">Yorum</th>
                            <th scope="col" class="sort" data-sort="completion">Detay</th>
                            <th scope="col">Sil</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="budget">
                                    @item.TestimonialId
                                </td>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.ImageUrl">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    @item.Company
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Comment
                                </td>
                                <td>
                                    <a href="/Testimonial/EditTestimonial/@item.TestimonialId" class="btn btn-primary">Detaylar</a>
                                </td>
                                <td>
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a asp-controller="Testimonial" asp-action="CreateTestimonial" class="btn btn-success">Referans Ekle</a>
    </div>
</div>


