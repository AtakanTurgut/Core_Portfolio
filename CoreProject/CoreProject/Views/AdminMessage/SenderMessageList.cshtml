@using EntityLayer.Concrete
@model List<GenericMessage>

@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Gönderilen Kutusu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Alıcı</th>
                <th scope="col" class="sort" data-sort="budget">Alıcı Mail</th>
                <th scope="col" class="sort" data-sort="budget">Konu</th>
                <th scope="col" class="sort" data-sort="name">Tarih</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @item.GenericMessageId
                    </th>
                    <th scope="row">
                        <div class="media align-items-center">
                            <a class="avatar rounded-circle mr-3">
                                <img src="~/userImage/@ViewBag.ImageUrl">
                            </a>
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.ReceiverName</span>
                            </div>
                        </div>
                    </th>
                    <td class="budget">
                        @item.Receiver
                    </td>
                    <td class="budget">
                        @item.Subject
                    </td>
                    <td>
                        @(((DateTime)@item.Date).ToString("dd-MM-yyyy"))
                    </td>
                    <td>
                        <a href="/AdminMessage/SenderMessageDetails/@item.GenericMessageId" class="btn btn-primary"> Mesajı Gör</a>
                        <a href="/AdminMessage/DeleteSenderMessage/@item.GenericMessageId" class="btn btn-danger"> Mesajı Sil</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/AdminMessage/SendMessage" class="btn btn-success">Yeni Mesaj</a>
</div>



