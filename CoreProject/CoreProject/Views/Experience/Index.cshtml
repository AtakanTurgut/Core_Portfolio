@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Tarih</th>
                <th scope="col" class="sort" data-sort="name">Açıklama</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @item.ExperienceId
                    </th>
                    <td class="budget">
                        @item.Name
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/Experience/EditExperience/@item.ExperienceId" class="btn btn-primary">Güncelle</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
    <a asp-controller="Experience" asp-action="CreateExperience" class="btn btn-success">Deneyim Ekle</a>
</div>

