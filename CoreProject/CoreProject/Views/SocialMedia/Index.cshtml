@using EntityLayer.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hesap Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="name">Icon</th>
                <th scope="col" class="sort" data-sort="budget">Sosyal Medya</th>
                <th scope="col" class="sort" data-sort="status">Adres</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @item.SocialMediaId
                    </th>
                    <th scope="row">
                        <a target="_blank" href="@item.Url">
                            <i class="@item.Icon text-dark"></i>
                        </a>
                    </th>
                    <td class="budget">
                        @item.Name
                    </td>
                    <td>
                        @item.Url
                    </td>
                    <td>
                        <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a href="/SocialMedia/EditSocialMedia/@item.SocialMediaId" class="btn btn-primary">Güncelle</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
    <a target="_blank" asp-controller="Default" asp-action="Index" class="btn btn-primary">Ana Sayfa</a>
    <a asp-controller="SocialMedia" asp-action="AddSocialMedia" class="btn btn-success">Sosyal Medya Ekle</a>
</div>
