@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Hizmet Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col" class="sort" data-sort="completion">Görseller</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="budget">
                                    @item.ServiceId
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                   @item.ImageUrl
                                </td>
                                <td>
                                    <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Service/EditService/@item.ServiceId" class="btn btn-primary">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a asp-controller="Service" asp-action="CreateService" class="btn btn-success">Hizmet Ekle</a>
    </div>
</div>
