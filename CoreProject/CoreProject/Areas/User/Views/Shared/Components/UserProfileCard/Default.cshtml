<div class="card card-profile">
    <img src="~/argon-dashboard-master/assets/img/theme/img-1-1000x600.jpg" alt="Image placeholder" class="card-img-top">
    <div class="row justify-content-center">
        <div class="col-lg-3 order-lg-2">
            <div class="card-profile-image">
                <a href="#">
                    <img src="~/userImage/@ViewBag.ImageUrl" class="rounded-circle">
                </a>
            </div>
        </div>
    </div>
    <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
    </div>
    <div class="card-body pt-0">
        <div class="row">
            <div class="col">
                <br />
                <div class="text-center">
                    Hoş Geldin!
                </div>
                <div class="card-profile-stats d-flex justify-content-center">
                    @ViewBag.Name @ViewBag.Surname
                </div>
            </div>
        </div>
        <div class="text-center">
            <h5 class="h3">
            </h5>
            <div class="h5 mt-4">
                <i class="ni business_briefcase-24 mr-2"></i> @ViewBag.UserName
            </div>
            <div>
                <i class="ni education_hat mr-2"></i> @ViewBag.Email
            </div>
        </div>
    </div>
</div>