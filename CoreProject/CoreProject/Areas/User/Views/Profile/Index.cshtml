@model UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-xl-4 order-xl-2">
            <div class="card card-profile">
                <img src="~/argon-dashboard-master/assets/img/theme/img-1-1000x600.jpg" alt="Image placeholder" class="card-img-top">
                <div class="row justify-content-center">
                    <div class="col-lg-3 order-lg-2">
                        <div class="card-profile-image">
                            <a href="#">
                                <img src="~/userImage/@Model.ImageUrl" class="rounded-circle">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                    
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col">
                            <div class="card-profile-stats d-flex justify-content-center">
                                
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <h5 class="h3">
                            @Model.Name @Model.Surname
                        </h5>
                        <div class="h5 mt-4">
                            <i class="ni business_briefcase-24 mr-2"></i> @Model.UserName
                        </div>
                        <div>
                            <i class="ni education_hat mr-2"></i>@Model.Email
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-8 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0"> Profil Bilgilerini Düzenle </h3>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <form class="form-group" method="post" enctype="multipart/form-data">
                        <h6 class="heading-small text-muted mb-4">Kullanıcı Bilgileri</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-username">Kullanıcı Adı</label>
                                        <input type="text" asp-for="UserName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-email">Email Adresi</label>
                                        <input type="email" asp-for="Email" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-first-name">Ad</label>
                                        <input type="text" class="form-control" asp-for="Name">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-last-name">Soyad</label>
                                        <input type="text" class="form-control" asp-for="Surname">
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <hr class="my-4" />
                        <!-- Address -->
                        <h6 class="heading-small text-muted mb-4">Ek Gereksinimler</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-address">Resim Yükle</label>
                                        <input type="file" asp-for="Image">
                                        <div class="input-group col-xs-12">
                                            <input type="text" class="form-control file-upload-info" disabled 
                                            placeholder="Resim Yükleyin" />
                                            <span class="input-group-append">
                                                <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-last-name">Şifre</label>
                                        <input type="text" id="input-last-name" class="form-control" placeholder="Şifre" value="Jesse">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-last-name">Şifre Tekrar</label>
                                        <input type="text" id="input-last-name" class="form-control" placeholder="Şifre Tekrar" value="Jesse">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <button class="btn btn-success mr-2">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

